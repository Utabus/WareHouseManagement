<UserControl x:Class="WareHouseManagement.Views.ThongKeUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WareHouseManagement.ViewModels"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
            >

    <UserControl.DataContext>
        <vm:ThongKeViewModel/>
    </UserControl.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Filter -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="0,0,0,10" >
            <TextBlock Text="Chọn năm:" VerticalAlignment="Center"/>
            <ComboBox ItemsSource="{Binding Years}" SelectedItem="{Binding SelectedYear}" Width="100"/>
            <Button Content="Xuất Excel" Command="{Binding ExportExcelCommand}" Width="100"/>
            <Button Content="Xuất PDF" Command="{Binding ExportPdfCommand}" Width="100"/>
        </StackPanel>

        <!-- DataGrid hiển thị doanh thu -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding InvoiceProductInfo}" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tên" Binding="{Binding ProductName}" Width="*"/>
                <DataGridTextColumn Header="Series" Binding="{Binding Series, StringFormat=N0}" Width="*"/>
                <DataGridTextColumn Header="Số lượng" Binding="{Binding Quantity, StringFormat=N0}" Width="*"/>
                <DataGridTextColumn Header="Ngày" Binding="{Binding InvoiceDate}" Width="*"/>
                <DataGridTextColumn Header="Nhập/Xuất" Binding="{Binding Type}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Tổng hợp -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" >
            <TextBlock Text="{Binding TotalRevenue, StringFormat='Tổng doanh thu: {0:N0}'}" FontWeight="Bold"/>
            <TextBlock Text="{Binding TotalProfit, StringFormat='Tổng lợi nhuận: {0:N0}'}" FontWeight="Bold"/>
        </StackPanel>

    </Grid>
</UserControl>
