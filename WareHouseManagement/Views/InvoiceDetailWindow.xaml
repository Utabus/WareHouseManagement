<Window x:Class="WareHouseManagement.Views.InvoiceDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WareHouseManagement.Views"
        mc:Ignorable="d"
        Title="InvoiceDetailWindow" Height="450" Width="800">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Text="{Binding Invoice.InvoiceCode}"
            FontSize="24"
            FontWeight="Bold"
            Margin="0,0,0,20"/>

        <!-- Info chung -->
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Khách hàng: " FontWeight="Bold"/>
                <TextBlock Text="{Binding Invoice.CustomerName}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Ngày: " FontWeight="Bold"/>
                <TextBlock Text="{Binding Invoice.InvoiceDate, StringFormat={}{0:dd/MM/yyyy}}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Tổng tiền: " FontWeight="Bold"/>
                <TextBlock Text="{Binding Invoice.TotalAmount, StringFormat={}{0:N0} VNĐ}"
                    Foreground="Red"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Công nợ: " FontWeight="Bold"/>
                <TextBlock>
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Text" Value="Đã thanh toán"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Invoice.IsDebt}" Value="True">
                                    <Setter Property="Text" Value="Công nợ"/>
                                    <Setter Property="Foreground" Value="Red"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>
        </StackPanel>

        <!-- Danh sách sản phẩm -->
        <DataGrid Grid.Row="2"
           ItemsSource="{Binding Items}"
           AutoGenerateColumns="False"
           CanUserAddRows="False"
           IsReadOnly="True">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Tên SP" Binding="{Binding ProductName}" Width="*"/>
                <DataGridTextColumn Header="SL" Binding="{Binding Quantity}" Width="*"/>
                <DataGridTextColumn Header="Giá vốn" Binding="{Binding CostPrice, StringFormat={}{0:N0} VNĐ}" Width="*"/>
                <DataGridTextColumn Header="Giá bán" Binding="{Binding SellPrice, StringFormat={}{0:N0} VNĐ}" Width="*"/>
                <DataGridTextColumn Header="Tổng"
                             Binding="{Binding Total, StringFormat={}{0:N0} VNĐ}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>

</Window>
