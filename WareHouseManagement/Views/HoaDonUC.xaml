<UserControl x:Class="WareHouseManagement.Views.HoaDonUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WareHouseManagement.Views"
             mc:Ignorable="d" 
             >

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <Label Grid.Row="0" Content="Quản lý Hóa đơn" 
               FontSize="24" FontWeight="Bold"
               Height="40"
               Background="Transparent"
               BorderThickness="0"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"/>

        <!-- Thanh công cụ -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,10,0,10">
            <TextBox Width="200" Margin="0,0,10,0" 
                     Text="{Binding Keyword, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Tìm" Width="70" Margin="0,0,10,0" Command="{Binding SearchCommand}"/>
            <Button Content="Thêm hóa đơn" Width="150" Margin="0,0,10,0" Background="#4CAF50" Foreground="White" Command="{Binding AddCommand}"/>
            <Button Content="Làm mới" Width="100" Background="#2196F3" Foreground="White" Command="{Binding RefreshCommand}"/>
        </StackPanel>

        <!-- Bảng danh sách hóa đơn -->
        <DataGrid ItemsSource="{Binding Invoices}" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="*"/>
                <DataGridTextColumn Header="Mã hóa đơn" Binding="{Binding InvoiceCode}" Width="*"/>
                <DataGridTextColumn Header="Ngày" Binding="{Binding InvoiceDate}" Width="*"/>
                <DataGridTextColumn Header="Loại" Binding="{Binding Type}" Width="*"/>
                <DataGridTextColumn Header="Tổng tiền" Binding="{Binding TotalAmount}" Width="*"/>
                <DataGridTextColumn Header="Lợi nhuận" Binding="{Binding Profit}" Width="*"/>
                <!-- Cột hành động -->
                <DataGridTemplateColumn Header="Hành động" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Sửa" Width="60" Margin="5,0"
                                        Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"/>
                                <Button Content="Xóa" Width="60" Margin="5,0" Background="#F44336" Foreground="White"
                                        Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
