<UserControl x:Class="WareHouseManagement.Views.ProductTypeUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             
             
             >

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <Label Grid.Row="0" Content="Danh Sách Loại Sản Phẩm"
               FontSize="24" FontWeight="Bold"
               Height="40"
               BorderThickness="0"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               Background="Transparent"/>

        <!-- Thanh công cụ -->
        <StackPanel Orientation="Horizontal" Margin="0 5" Grid.Row="1">
            <Button Content="Thêm loại" Command="{Binding AddCommand}" Width="120" Background="#4CAF50" Foreground="White" Margin="0 0 10 0"/>
            <Button Content="Làm mới" Command="{Binding RefreshCommand}" Width="100" Background="#2196F3" Foreground="White"/>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid ItemsSource="{Binding ProductTypes}" Grid.Row="2"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Mã loại" Binding="{Binding TypeCode}" Width="150"/>
                <DataGridTextColumn Header="Tên loại" Binding="{Binding TypeName}" Width="200"/>
                <DataGridTextColumn Header="Mô tả" Binding="{Binding Description}" Width="*"/>
                <!-- Action Column -->
                <DataGridTemplateColumn Header="Hành động" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Sửa" Width="60" Margin="0 0 5 0"
                                        Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}" />
                                <Button Content="Xóa" Width="60" 
                                        Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}" Background="#F44336" Foreground="White"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
