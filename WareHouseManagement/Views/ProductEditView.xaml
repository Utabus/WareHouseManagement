<Window x:Class="WareHouseManagement.Views.ProductEditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WareHouseManagement.ViewModels"
        Title="Thêm sản phẩm" Height="420" Width="380"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Form nhập liệu -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Series -->
            <TextBlock Text="Series:" VerticalAlignment="Center" Margin="0 5"/>
            <TextBox Grid.Column="1" Text="{Binding Product.Series}" Margin="0 5"/>

            <!-- ProductName -->
            <TextBlock Text="Tên sản phẩm:" Grid.Row="1" VerticalAlignment="Center" Margin="0 5"/>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Product.ProductName}" Margin="0 5"/>

            <!-- Color -->
            <TextBlock Text="Màu:" Grid.Row="2" VerticalAlignment="Center" Margin="0 5"/>
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Product.Color}" Margin="0 5"/>

            <!-- Capacity -->
            <TextBlock Text="Dung lượng:" Grid.Row="3" VerticalAlignment="Center" Margin="0 5"/>
            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Product.Capacity}" Margin="0 5"/>

            <!-- CostPrice -->
            <TextBlock Text="Giá nhập:" Grid.Row="4" VerticalAlignment="Center" Margin="0 5"/>
            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Product.CostPrice}" Margin="0 5"/>

            <!-- SellPrice -->
            <TextBlock Text="Giá bán:" Grid.Row="5" VerticalAlignment="Center" Margin="0 5"/>
            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding Product.SellPrice}" Margin="0 5"/>

            <!-- Quantity -->
            <TextBlock Text="SL:" Grid.Row="6" VerticalAlignment="Center" Margin="0 5"/>
            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding Product.Quantity}" Margin="0 5"/>
            <!-- ProductType -->
            <TextBlock Text="Loại sản phẩm:" Grid.Row="7" VerticalAlignment="Center" Margin="0 5"/>
            <ComboBox Grid.Row="7" Grid.Column="1" 
          ItemsSource="{Binding ProductTypes}" 
          SelectedValue="{Binding Product.ProductTypeId, Mode=TwoWay}" 
          SelectedValuePath="Id"
          DisplayMemberPath="TypeName"
          Margin="0,5"
          Height="25"/>

            <!-- Tạo đủ hàng cho Grid -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
        </Grid>

        <!-- Nút Lưu -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
            <Button Content="Lưu" Width="100" Command="{Binding SaveCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Background="#4CAF50" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
